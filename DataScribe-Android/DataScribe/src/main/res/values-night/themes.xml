<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Common" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Secondary brand color. -->
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/DialogButtonStyled</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimarySurface</item>
        <!-- Customize your theme here. -->

        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.Material3.MaterialCalendar.Fullscreen</item>
        <!--<item name="android:colorControlActivated">@color/mainColor2</item>-->
        <item name="snackbarTextViewStyle">@style/snackbar_text</item>

    </style>

    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:maxLines">5</item>
    </style>

    <style name="Theme.Common" parent="Base.Theme.Common" />

    <style name="DialogButtonStyled" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColor">@color/mainColor2</item>
    </style>

    <style name="RoundedShapeDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeDialog</item>
        <!--<item name="android:textSize">@dimen/_12ssp</item>-->
    </style>

    <style name="RoundShapeDialog" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="android:windowAnimationStyle">@style/RoundShapeDialogAnim</item>
        <item name="cornerFamily">rounded</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="cornerSize">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="RoundShapeDialogAnim">
        <item name="android:windowEnterAnimation">@anim/enter</item>
        <item name="android:windowExitAnimation">@anim/exit</item>
    </style>

    <!--<style name="Widget.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">-->
    <style name="Widget.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="BottomSheetDialogGeneral" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!--Typography style-->

    <style name="General.Text.Title" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_24sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="fontFamily">@font/inter_bold</item>
        <item name="lineHeight">32dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">-0.035</item>
    </style>

    <style name="General.Text.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/text_dark3</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="lineHeight">35dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="General.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/text_dark3</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="lineHeight">35dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <style name="General.Text.Small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:textColor">@color/text_dark3</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="lineHeight">35dp</item>
        <item name="fontWeight">500</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>

    <!--Typography style-->

    <!--Button Style-->
    <style name="Default.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.035</item>
        <item name="android:background">@drawable/button_bg_primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">@dimen/min_button_height</item>
        <item name="android:fontWeight">16</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <style name="Default.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.035</item>
        <item name="android:background">@drawable/button_bg_secondary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:minHeight">@dimen/min_button_height</item>
        <item name="android:fontWeight">16</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>
    <!--Button Style-->

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/border</item>
        <item name="colorOnSurface">@color/border</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text
        </item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button.Neutral</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/action_color</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/action_color</item>
    </style>

    <style name="Widget.App.Button.Neutral" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="default_bubble_style">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
    </style>


    <style name="default_close_bubble_style">
        <item name="android:windowEnterAnimation">@anim/enter</item>
        <item name="android:windowExitAnimation">@anim/exit</item>
    </style>

</resources>